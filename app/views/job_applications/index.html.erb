<div class="container-job_application">
    <h1>Your Job Applications</h1>
    <% @job_applications.each do |job_application| %>
        <%= link_to job_applications_path(job_application), class:"card-links" do %>
            <div class="card-job_application">
                <div class="card-job_application-infos">
                    <h3><%= job_application.job.title %></h3>
                    <p><%= job_application.status %></p>
                    <p><%= job_application.stage %></p>
                </div>
            </div>
        <% end %>
    <% end %>
</div>